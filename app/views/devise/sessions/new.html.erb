<% content_for :full_width do %>

<section class="profile-hero">
  <div class="container d-flex align-items-center justify-content-center min-vh-100">
    <div class="card auth-card shadow-lg rounded-4 w-100">

      <div class="text-center mb-4">
        <h2 class="fw-bold mb-1">AI Meal Prep Assistant</h2>
        <p class="text-muted mb-0">Log in to your account</p>
      </div>

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <div class="mb-3">
            <%= f.input :email,
              required: true,
              autofocus: true,
              label: "Email address",
              input_html: { autocomplete: "email", class: "form-control rounded-3" } %>
          </div>

          <div class="mb-3">
            <%= f.input :password,
              required: true,
              label: "Password",
              input_html: { autocomplete: "current-password", class: "form-control rounded-3" } %>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="mb-3">
              <%= f.input :remember_me, as: :boolean, label: "Remember me" %>
            </div>
          <% end %>
        </div>

        <div class="d-grid mt-4">
          <%= f.button :submit, "Log in", class: "btn btn-primary-custom btn-lg rounded-3" %>
        </div>
      <% end %>

      <div class="text-center mt-4 text-muted">
        Donâ€™t have an account?
        <%= link_to "Sign up", new_registration_path(resource_name), class: "text-decoration-none fw-semibold" %>
      </div>

    </div>
  </div>
</section>

<% end %>
