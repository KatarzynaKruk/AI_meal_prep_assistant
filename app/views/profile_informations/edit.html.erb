<div class="container py-5">
  <h1 class="mb-4 text-center">Your Profile Information</h1>
  <div class="row g-4 justify-content-center">
    <!-- Profile Preview -->
    <div class="col-lg-5">
      <div class="card shadow-sm">
        <div class="card-body ">
          <div class="text-center mb-4 ">
              <%= image_tag "cookie_monster.jpg",
              class: "rounded-circle mb-3",
              style: "width: 160px; height: 160px; object-fit: cover;",
              alt: "Profile picture" %>
          </div>
          <h2 class="mb-4 text-center"><%= @profile_information.name %></h2>
          <ul class="list-group list-group-flush bg-white">
            <li class="list-group-item py-3"><strong>Height:</strong> <%= @profile_information.height %> cm</li>
            <li class="list-group-item py-3"><strong>Weight:</strong> <%= @profile_information.weight %> kg</li>
            <li class="list-group-item py-3"><strong>Date of Birth:</strong> <%= @profile_information.date_of_birth %></li>
            <li class="list-group-item py-3"><strong>Gender:</strong> <%= @profile_information.gender %></li>
            <li class="list-group-item py-3"><strong>Restrictions:</strong> <%= @profile_information.restrictions %></li>
            <li class="list-group-item py-3"><strong>Conditions:</strong> <%= @profile_information.conditions %></li>
          </ul>
          <div class="d-grid mt-4">
            <button
              type="button"
              class="btn btn-outline-primary btn-lg"
              data-bs-toggle="modal"
              data-bs-target="#editProfileModal">
              Edit Profile
            </button>
          </div>
        </div>
      </div>
    </div>
    <!-- Edit Form -->
    <div class="modal fade" id="editProfileModal" tabindex="-1" aria-hidden="true">
      <div class="modal-dialog modal-lg modal-dialog-centered modal-dialog-scrollable">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title">Update Your Profile Information</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
          </div>
        <div class="modal-body">

          <%= form_with(model: @profile_information,
                        url: user_profile_information_path(@user)) do |f| %>

          <div class="mb-3">
            <%= f.label :name, class: 'form-label' %>
            <%= f.text_field :name, class: 'form-control' %>
          </div>

          <div class="row">
            <div class="col-md-6 mb-3">
              <%= f.label :height, 'Height (cm)', class: 'form-label' %>
              <%= f.text_field :height, class: 'form-control' %>
            </div>

            <div class="col-md-6 mb-3">
              <%= f.label :weight, 'Weight (kg)', class: 'form-label' %>
              <%= f.text_field :weight, class: 'form-control' %>
            </div>
          </div>

          <div class="mb-3">
            <%= f.label :date_of_birth, class: 'form-label' %>
            <%= f.date_field :date_of_birth, class: 'form-control' %>
          </div>

          <div class="mb-3">
            <%= f.label :gender, class: 'form-label' %>
            <%= f.text_field :gender, class: 'form-control' %>
          </div>

          <div class="mb-3">
            <%= f.label :restrictions, class: 'form-label' %>
            <%= f.text_field :restrictions, class: 'form-control' %>
          </div>

          <div class="mb-4">
            <%= f.label :conditions, class: 'form-label' %>
            <%= f.text_field :conditions, class: 'form-control' %>
          </div>

          <div class="modal-footer px-0">
            <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">
              Cancel
            </button>
            <%= f.submit 'Save changes', class: 'btn btn-primary' %>
          </div>

        <% end %>
        </div>
       </div>
      </div>
    </div>
    <div class="mt-4 text-center">
    <%= link_to "Back to Home", user_meal_plans_path(current_user), class: "btn btn-outline-primary" %>
    </div>
  </div>

</div>

<br><br>
