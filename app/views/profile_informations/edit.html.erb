<div>
  <h1>Your Profile Information</h1>
</div>

<br>

<div style="display: flex; gap: 40px; align-items: flex-start;">

  <div style="flex: 1;">
    <div id="profile-preview">
      <h2>Profile Preview</h2>

      <p><strong>Name:</strong> <%= @profile_information.name %></p>
      <p><strong>Height:</strong> <%= @profile_information.height %> cm</p>
      <p><strong>Weight:</strong> <%= @profile_information.weight %> kg</p>
      <p><strong>Date of Birth:</strong> <%= @profile_information.date_of_birth %></p>
      <p><strong>Gender:</strong> <%= @profile_information.gender %></p>
      <p><strong>Restrictions:</strong> <%= @profile_information.restrictions %></p>
      <p><strong>Conditions:</strong> <%= @profile_information.conditions %></p>
    </div>
  </div>

  <div style="flex: 1;">
    <h2>Update Your Profile Information</h2>

    <%= form_with(model: @profile_information,
                  url: user_profile_information_path(@user)) do |f| %>

      <div>
        <%= f.label :name %><br>
        <%= f.text_field :name %>
      </div>

      <br>

      <div>
        <%= f.label :height %><br>
        <%= f.text_field :height %>
      </div>

      <br>

      <div>
        <%= f.label :weight %><br>
        <%= f.text_field :weight %>
      </div>

      <br>

      <div>
        <%= f.label :date_of_birth %><br>
        <%= f.text_field :date_of_birth %>
      </div>

      <br>

      <div>
        <%= f.label :gender %><br>
        <%= f.text_field :gender %>
      </div>

      <br>

      <div>
        <%= f.label :restrictions %><br>
        <%= f.text_field :restrictions %>
      </div>

      <br>

      <div>
        <%= f.label :conditions %><br>
        <%= f.text_field :conditions %>
      </div>

      <br><br>

      <div>
        <%= f.submit %>
      </div>

    <% end %>
  </div>

</div>

<br><br>

<div>
  <%= link_to root_path, class: "btn btn-outline-primary" do %>
    ‚Üê Back to Home
  <% end %>
</div>
