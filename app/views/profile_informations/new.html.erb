<h1>Profile Information</h1>
<div class="home-page-content text-center py-5">
  <div class="row justify-content-center mb-4">
    <div class="col-md-4 col-lg-3">
<%= form_with(model: @profile_information, url: user_profile_information_path(@user)) do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :height %>
  <%= f.text_field :height %>
  <%= f.label :weight %>
  <%= f.text_field :weight %>
  <%= f.label :date_of_birth %>
  <%= f.text_field :date_of_birth %>
  <%= f.label :gender %>
  <%= f.text_field :gender %>
  <%= f.label :restrictions %>
  <%= f.text_field :restrictions %>
  <%= f.label :conditions %>
  <%= f.text_field :conditions %>
  <%= f.submit %>
<% end %>
    </div>
  </div>
</div>

