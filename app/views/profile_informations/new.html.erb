<% content_for :full_width, true %>

<section class="profile-hero">
  <div class="container d-flex align-items-center justify-content-center min-vh-100">
    <div class="card shadow-sm rounded-4 w-100" style="max-width: 900px;">
      <div class="px-5 py-4">

        <!-- Header -->
        <div class="text-center mb-5">
          <h2 class="fw-bold mb-1">Your Profile</h2>
          <p class="text-muted mb-0 fs-5">
            Tell us a bit about yourself so we can personalize your meal plans
          </p>
        </div>

        <%= form_with(model: @profile_information, url: user_profile_information_path(@user), local: true) do |f| %>

          <div class="row">
            <div class="col-12 mb-3">
              <%= f.label :name, class: 'form-label' %>
              <%= f.text_field :name, class: 'form-control rounded-3', placeholder: 'Enter your first and last name' %>
            </div>
          </div>

          <div class="row">
            <div class="col-12 mb-3">
              <%= f.label :height, 'Height (cm)', class: 'form-label' %>
              <%= f.text_field :height, class: 'form-control rounded-3', placeholder: 'e.g., 175' %>
            </div>
          </div>

          <div class="row">
            <div class="col-12 mb-3">
              <%= f.label :weight, 'Weight (kg)', class: 'form-label' %>
              <%= f.text_field :weight, class: 'form-control rounded-3', placeholder: 'e.g., 70' %>
            </div>
          </div>

          <div class="row">
            <div class="col-12 mb-3">
              <%= f.label :date_of_birth, class: 'form-label' %>
              <%= f.date_field :date_of_birth, class: 'form-control rounded-3' %>
            </div>
          </div>

          <div class="row">
            <div class="col-12 mb-3">
              <%= f.label :gender, class: 'form-label' %>
              <%= f.text_field :gender, class: 'form-control rounded-3', placeholder: 'e.g., Female, Male, Other' %>
            </div>
          </div>

          <div class="row">
            <div class="col-12 mb-3">
              <%= f.label :restrictions, class: 'form-label' %>
              <%= f.text_field :restrictions, class: 'form-control rounded-3', placeholder: 'e.g., vegetarian, gluten-free' %>
            </div>
          </div>

          <div class="row">
            <div class="col-12 mb-3">
              <%= f.label :conditions, class: 'form-label' %>
              <%= f.text_field :conditions, class: 'form-control rounded-3', placeholder: 'e.g., diabetes' %>
            </div>
          </div>

          <div class="d-grid mt-4">
            <%= f.submit 'Save to Profile', class: 'btn btn-primary-custom btn-lg rounded-3' %>
          </div>

        <% end %>

      </div>
    </div>
  </div>
</section>
