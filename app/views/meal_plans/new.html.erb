<%= simple_form_for([@user, @meal_plan]) do |f| %>
    <%= f.input :plan_title, label: "Meal Plan name" %>
    <%= f.input :diet, placeholder: "What type of diet do you follow? e.g. Vegetarian, pescatarian, no specific diet etc." %>
    <%= f.input :goal, placeholder: "What is your goal?" %>
    <%= f.input :meals_required, placeholder: "How many meals do you want this week?  e.g. All days except Wednesday, breakfast, lunch and dinner" %>
    <%= f.input :additional_preferences, placeholder: "Any other considerations while we make your plan?" %>
    <%= f.submit class: "btn btn-outline-primary mb-2" %>
<% end %>

<%= link_to "Back to my plans", user_meal_plans_path(@user), class: "btn btn-outline-warning" %>
